{
  "compilerOptions": 
  {
    "allowJs": true,
    "module": "ES2015",
    "target": "ES2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "rootDir": "app",
    "sourceMap": true,
    "isolatedModules":false,
    "moduleDetection": "force",
    "allowSyntheticDefaultImports":true,
    // "outDir":"app/generated"
  },
  "include": [
    "app/**/*.ts"
  ],
  "exclude": [
    "app/**/*.js",
    "generated"
  ]
}
